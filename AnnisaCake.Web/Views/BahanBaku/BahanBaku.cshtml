@model IEnumerable<AnnisaCake.Web.Models.bahan_baku>

@{
    /**/

    ViewBag.Title = "BahanBaku";
}


<style>
    .action {
        width: 30%
    }
</style>
<h2>BahanBaku</h2>

<p>
    @Html.ActionLink("Create New", "CreateBahanBaku")
</p>

@Html.Hidden("item-to-delete", "", new { @id = "item-to-delete" })
<div class="body">
    <div class="table-responsive">
        <table id="datatable" class="table table-striped table-bordered dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable-buttons_info">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.nama_bahan_baku)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.satuan)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.stok)
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nama_bahan_baku)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.satuan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.stok)
                        </td>
                        <td class="col-lg-2">
                            <center>
                                @Html.ActionLink("Edit", "EditBahanBaku", new { idBahanBaku = item.id_bahan_baku }, new { @class = "btn btn-primary action " })
                                @*@Html.ActionLink("Detail", "DetailsKue", new { id = item.id }, new { @class = "btn btn-primary action " })*@
                                <button type="button" class="delete_kue btn btn-danger action" onclick="showPopUp(this)" value="@item.id_bahan_baku">Delete</button>
                            </center>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>


@Html.Hidden("item-to-delete", "", new { @id = "item-to-delete" })
@section Scripts {
    <script>
        function showPopUp(e) {
            var id = e.value;
            $('#item-to-delete').val(id);
            $('.bs-example-modal-sm').modal('show');
        }

    $('#btnContinueDelete').click(function() {
        var id = $('#item-to-delete').val();
        debugger
         $.ajax({
            type: "POST",
            url: '@Url.Action("DeleteBahanBaku")',
            data: JSON.stringify({ idBahanBaku: id }), //use id here
            dataType: "json",
            contentType: "application/json; charset=utf-8",
             success: function () {
                $('.bs-example-modal-sm').modal('hide');
                alert("Data has been deleted.");
                location.reload();
            },
             error: function () {
                 $('.bs-example-modal-sm').modal('hide');
                alert("Error while deleting data");
             }


            });
    });
    </script>
}

<!-- Small modal -->

<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel2">Deleted Data </h4>
            </div>
            <div class="modal-body">
                <p>
                    Are you cure for deleted data ?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger col-lg-3" id="btnContinueDelete" data-dismiss="modal"> Delete</button>
                <button type="button" class="btn btn-primary col-lg-3 fc-corner-left" style="float: right;" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>
<!-- /modals -->
