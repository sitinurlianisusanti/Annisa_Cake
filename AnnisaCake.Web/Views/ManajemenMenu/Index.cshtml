<h2>Index</h2>
<link href="~/Content/css/AddStyleCommon.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <div class="col-md-5">
                    <h2>Role User</h2>
                    <select id="drop_down_role" class="form-control">
                        <option value="0">Choose..</option>
                    </select>
                </div>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">
                        @*<table id="datatable2" class="table table-striped table-bordered dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable-buttons_info">*@
                        <table id="example" class="table table-striped table-bordered bulk_action" role="grid" aria-describedby="datatable-buttons_info">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Id</th>
                                    <th>Icon</th>
                                    <th>Nama</th>
                                    <th>Aktif</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr></tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th>Id</th>
                                    <th>Icon</th>
                                    <th>Nama</th>
                                    <th>
                                        Aktif
                                    </th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        let data = null;
        let table = null;

        function getMenuChild(id) {
            for (i = 0; i < data.length; i++) {
                if (data[i].id === id) {
                    //console.log(data[i].sub);
                    return data[i].sub;
                }
            }
        }
        function getMenuChildChild(idParent, idChild) {
            for (i = 0; i < data.length; i++) {
                if (data[i].id === idParent) {
                    for (ii = 0; ii < data.length; ii++) {
                        if (data[i].sub[ii].id === idChild) {
                            return data[i].sub[ii];
                        }
                    }
                }
            }
        }

        $(document).ready(function () {
            // Init data table
            initDataTable()

            // Switchery just for this page

            initSwitchButton();

            //fill dropdown user
            fillDropDownUser();

            //
            $("#drop_down_role").change(function () {
                getMenuByuser();
                table.clear().rows.add(data).draw();
                initSwitchButton();
            });

            $("select[name=example_length]").change(function () {
                initSwitchButton();
            });
        });

        function initDataTable() {
            getMenuByuser();
            let path = (pathMenu + "?idUser=" + $('#drop_down_role').val().toString());
            table = $('#example').DataTable({
                data: data,
                //pageLength: 5,
                columns: [
                    {
                        "className": 'details-control',
                        "orderable": false,
                        "data": null,
                        "defaultContent": ''
                    },
                    { "data": "id" },
                    { "data": "icon" },
                    { "data": "name" },
                    {
                        "data": "role", "render": function (data) {
                            return '<label><input type="checkbox" ' + (data == '1' ? "checked" : '') + ' onclick="updateRole(this)" class="js-switch" /></label>';
                        }
                    },
                ],
                order: [[1, 'asc']],
                initComplete: function () {
                    init = false;
                },
                createdRow: function (row, data, index) {
                    if (data.extn === '') {
                        var td = $(row).find("td:first");
                        td.removeClass('details-control');
                    }
                },
                rowCallback: function (row, data, index) {
                    //console.log('rowCallback');
                }
            });

            let idTabel = null
            // Add event listener for opening and closing first level childdetails
            $('#example tbody').on('click', 'td.details-control', function () {
                var childTable = null;
                var tr = $(this).closest('tr');
                var row = table.row(tr);
                var rowData = row.data();
                if (row.child.isShown() || tr[0].className.includes("shown")) {
                    // This row is already open - close it
                    row.child.hide();
                    tr.removeClass('shown');
                }
                else {
                    // Open this row
                    if (rowData.sub !== null) {
                        row.child(
                            '<table id="child_details' + rowData.id + '" class="table table-striped table-bordered">'
                            + '<thead> <tr><th></th><th>Id</th><th>Icon</th><th>Nama</th><th>Aktif</th></tr></thead >'
                            + '<tbody></tbody>'
                            + '</table > ').show();
                        idTabel = '#child_details' + rowData.id.toString();
                        childTable = $(idTabel).DataTable({
                            data: getMenuChild(rowData.id),
                            columns: [
                                {
                                    "className": 'details-control1',
                                    "orderable": false,
                                    "data": null,
                                    "defaultContent": ''
                                },
                                { "data": "id" },
                                { "data": "icon" },
                                { "data": "name" },
                                {
                                    "data": "role", "render": function (data) {
                                        return '<label><input type="checkbox" ' + (data == '1' ? "checked" : '') + ' onclick="updateRole(this)" class="js-switch" /></label>';
                                    }
                                },
                            ],
                            order: [[1, 'asc']],
                            initComplete: function () {
                                init = false;
                            },
                            createdRow: function (row, data, index) {
                                if (data.extn === '') {
                                    var td = $(row).find("td:first");
                                    td.removeClass('details-control');
                                }
                            },
                            rowCallback: function (row, data, index) {
                                //console.log('rowCallback');
                            },
                            //destroy: true,
                            searching: false,
                            paging: false,
                            info: false,
                            scrollY: '100px'
                        });
                    }
                    tr.addClass('shown');
                    initSwitchButton();
                }

                // Add event listener for opening and closing second level child details
                $(idTabel).on('click', 'td.details-control1', function () {
                    var c_tr = $(this).closest('tr');
                    var c_row = childTable.row(c_tr);
                    var c_row_data = c_row.data();

                    if (c_row.child.isShown() || c_tr[0].className.includes("shown")) {
                        // This row is already open - close it
                        c_row.child.hide();
                        c_tr.removeClass('shown');
                    }
                    else {
                        // Open this row
                        if (c_row_data.sub !== null) {
                            idTabel = '#child_details_2' + c_row_data.id.toString();
                            c_row.child(
                                '<table id="' + idTabel + '"  class="table table-striped table-bordered" style="padding-left:50px;">'
                                + '<thead > <tr><th></th><th>Id</th><th>Icon</th><th>Nama</th><th>Aktif</th></tr> </thead > <tbody>'
                                + '</tbody></table >').show();
                            idTabel = '#child_details_2' + c_row_data.id.toString();

                            let childTable = $(idTabel).DataTable({
                                data: getMenuChildChild(rowData.id, c_row_data.id),
                                columns: [
                                    {
                                        "className": 'details-control1',
                                        "orderable": false,
                                        "data": null,
                                        "defaultContent": ''
                                    },
                                    { "data": "id" },
                                    { "data": "icon" },
                                    { "data": "name" },
                                    {
                                        "data": "role", "render": function (data) {
                                            return '<label><input type="checkbox" ' + (data == '1' ? "checked" : '') + ' onclick="updateRole(this)" class="js-switch" /> </label>';
                                        }
                                    },
                                ],
                                destroy: true,
                                scrollY: '100px'
                            });
                        }
                        c_tr.addClass('shown');
                        initSwitchButton();
                    }
                });

            });
        }
        function getMenuByuser() {
            let path = (pathMenu + "?idRole=" + $('#drop_down_role').val().toString());
            console.log(path);
            $.ajax({
                url: path,
                datatype: "json",
                type: "GET",
                async: false,
                contentType: 'application/json; charset=utf-8',
                success: function (d) {
                    data = d;
                }
            });



        }
        function initSwitchButton() {
            if ($(".js-switch")[0]) {
                var elems = Array.prototype.slice.call($('.js-switch:not([data-switchery])'));
                elems.forEach(function (html) {
                    var switchery = new Switchery(html, {
                        color: '#26B99A'
                    });
                });
            }
        }

        function fillDropDownUser() {
            $.ajax({
                url: bashPath + "/RoleUser/GetRoleUser",
                datatype: "json",
                type: "GET",
                async: false,
                contentType: 'application/json; charset=utf-8',
                success: function (d) {
                    var $user = $("#drop_down_role");
                    $.each(d, function () {
                        $user.append('<option value="' + this.id_role + '">' + this.role + '</option>');
                    });
                }
            });
        }

        //function updateRole(menu) {
        //    debugger
        //    NotifFiled('gagal');
        //}
        function updateRole(menu) {
            let idRole = $('#drop_down_role').val().toString();
            let idMenu = menu.parentElement.parentElement.parentElement.cells[1].innerHTML;
            let ckState = menu.checked ? "add":"remove";
            debugger
            let path = bashPath + "/ManajemenMenu/UpdateRoleMenu?idMenu=" + idMenu + "&idRole=" + idRole + "&state=" + ckState;
            $.ajax({
                type: "POST",
                url: path,
                //data: JSON.stringify({ idMenu: parseInt(menu), idUser: parseInt(idUser) }), //use id here
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (respons) {
                     if (respons.message == "success") {
                         NotifSucces();
                     }
                     else {
                         NotifFiled()
                     }
                 },
                error: function () {
                     NotifFiled();
                 }
            });
        }





    </script>
}



